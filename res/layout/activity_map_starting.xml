<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/blk"
	android:weightSum="1">
    <LinearLayout
		android:id="@+id/layButtonH"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:gravity="center"
		android:layout_weight="0.15">
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Start"
			android:id="@+id/btnLocation"></Button>
	</LinearLayout>
    
    <LinearLayout
		android:id="@+id/layloadingH"
		android:layout_height="wrap_content"
		android:layout_weight="0.20"
		android:layout_width="fill_parent"
		android:gravity="center">
		<ProgressBar
			android:layout_width="wrap_content"
			android:id="@+id/progressBar1"
			android:background="@color/wht"
			android:layout_height="wrap_content"></ProgressBar>
	</LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15" >
<TextView 
    android:id="@+id/noNet"
    android:textStyle="italic"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Please click here to get the list of Hot chips restaurants in chennai if no network is available"
    android:textSize="15sp"
    android:textColor="#C35617"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"/>
        
        <Button
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Branches"
            android:layout_below="@id/noNet" />
    </RelativeLayout>

</LinearLayout>
